@{
    ViewData["Title"] = "Mode Selection";
    bool isBinarySelected = this.ViewData["multipleSelection"] == null;
    string BinaryModeSelected = "";
    string MultipleChoice = "";
    if (isBinarySelected == true)
    {
        BinaryModeSelected = "checked";
    }
    else
    {
        MultipleChoice = "checked";
    }
}


<h1 class="center">@ViewData["Title"]</h1>

<div class="container">
    <h3>Available modes:</h3>
    <div>
        <form method="post" asp-controller="Home" asp-action="ModeSelection">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="modeselection" value="BinaryMode" id="BinaryMode" @BinaryModeSelected>
                <label class="form-check-label" for="BinaryMode">
                    <b>Binary (Yes or No)</b>  – this is the default mode
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="modeselection" value="MultipleChoice" id="MultipleChoice" @MultipleChoice>
                <label class="form-check-label" for="MultipleChoice">
                    <b>Multiple choice questions</b> – showing three possible answers, one of which is correct.
                </label>
            </div>
            <div class="pt-3">
                <input type="submit" class="btn btn-outline-info center" />
            </div>
        </form>
    </div>
</div>